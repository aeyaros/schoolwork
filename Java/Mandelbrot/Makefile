JAVAC=javac
sources = $(wildcard *.java)
classes = $(sources:.java=.class)

all: $(classes)

run:
	java Main -NUMTHREADS  1 -SIZE  300 -THRESHOLD   300 -XLO -1.5      -XHI  1.5       -YLO -1.5       -YHI  1.5
	java Main -NUMTHREADS  2 -SIZE  300 -THRESHOLD   300 -XLO -1.5      -XHI  1.5       -YLO -1.5       -YHI  1.5
	java Main -NUMTHREADS  4 -SIZE  300 -THRESHOLD   300 -XLO -1.5      -XHI  1.5       -YLO -1.5       -YHI  1.5
	java Main -NUMTHREADS  8 -SIZE  300 -THRESHOLD   300 -XLO -1.5      -XHI  1.5       -YLO -1.5       -YHI  1.5
	java Main -NUMTHREADS 16 -SIZE  300 -THRESHOLD   300 -XLO -1.5      -XHI  1.5       -YLO -1.5       -YHI  1.5
	java Main -NUMTHREADS 32 -SIZE  300 -THRESHOLD   300 -XLO -1.5      -XHI  1.5       -YLO -1.5       -YHI  1.5
	
	java Main -NUMTHREADS  1 -SIZE  400 -THRESHOLD  1000 -XLO -0.138    -XHI -0.139     -YLO -0.649     -YHI -0.650
	java Main -NUMTHREADS  2 -SIZE  400 -THRESHOLD  1000 -XLO -0.138    -XHI -0.139     -YLO -0.649     -YHI -0.650
	java Main -NUMTHREADS  4 -SIZE  400 -THRESHOLD  1000 -XLO -0.138    -XHI -0.139     -YLO -0.649     -YHI -0.650
	java Main -NUMTHREADS  8 -SIZE  400 -THRESHOLD  1000 -XLO -0.138    -XHI -0.139     -YLO -0.649     -YHI -0.650
	java Main -NUMTHREADS 16 -SIZE  400 -THRESHOLD  1000 -XLO -0.138    -XHI -0.139     -YLO -0.649     -YHI -0.650
	java Main -NUMTHREADS 32 -SIZE  400 -THRESHOLD  1000 -XLO -0.138    -XHI -0.139     -YLO -0.649     -YHI -0.650
	
	java Main -NUMTHREADS  1 -SIZE 2000 -THRESHOLD 20000 -XLO -0.13883  -XHI -0.13887   -YLO -0.64933   -YHI -0.64937
	java Main -NUMTHREADS  2 -SIZE 2000 -THRESHOLD 20000 -XLO -0.13883  -XHI -0.13887   -YLO -0.64933   -YHI -0.64937
	java Main -NUMTHREADS  4 -SIZE 2000 -THRESHOLD 20000 -XLO -0.13883  -XHI -0.13887   -YLO -0.64933   -YHI -0.64937
	java Main -NUMTHREADS  8 -SIZE 2000 -THRESHOLD 20000 -XLO -0.13883  -XHI -0.13887   -YLO -0.64933   -YHI -0.64937
	java Main -NUMTHREADS 16 -SIZE 2000 -THRESHOLD 20000 -XLO -0.13883  -XHI -0.13887   -YLO -0.64933   -YHI -0.64937
	java Main -NUMTHREADS 32 -SIZE 2000 -THRESHOLD 20000 -XLO -0.13883  -XHI -0.13887   -YLO -0.64933   -YHI -0.64937
	
	java Main -NUMTHREADS  1 -SIZE 4000 -THRESHOLD   250 -XLO -0.840716 -XHI -0.840732  -YLO -0.22420   -YHI -0.224216
	java Main -NUMTHREADS  2 -SIZE 4000 -THRESHOLD   250 -XLO -0.840716 -XHI -0.840732  -YLO -0.22420   -YHI -0.224216
	java Main -NUMTHREADS  4 -SIZE 4000 -THRESHOLD   250 -XLO -0.840716 -XHI -0.840732  -YLO -0.22420   -YHI -0.224216
	java Main -NUMTHREADS  8 -SIZE 4000 -THRESHOLD   250 -XLO -0.840716 -XHI -0.840732  -YLO -0.22420   -YHI -0.224216
	java Main -NUMTHREADS 16 -SIZE 4000 -THRESHOLD   250 -XLO -0.840716 -XHI -0.840732  -YLO -0.22420   -YHI -0.224216
	java Main -NUMTHREADS 32 -SIZE 4000 -THRESHOLD   250 -XLO -0.840716 -XHI -0.840732  -YLO -0.22420   -YHI -0.224216

clean :
	rm -f *.class
	rm -f *.png

%.class : %.java
	$(JAVAC) $<
